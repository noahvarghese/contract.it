{
    "compilerOptions": {
        "lib": ["es5", "es6", "esnext"],
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true
    }
}
